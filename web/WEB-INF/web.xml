<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.marondal.hello.HelloController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ex01</servlet-name>
        <servlet-class>com.marondal.servlet.ex.Ex01Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ex01</servlet-name>
        <url-pattern>/servlet/ex01</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>test01</servlet-name>
        <servlet-class>com.marondal.servlet.test.Test01Controller</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>test01</servlet-name>
        <url-pattern>/servlet/test01</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>test02</servlet-name>
        <servlet-class>com.marondal.servlet.test.Test02Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>test02</servlet-name>
        <url-pattern>/servlet/test02</url-pattern>
    </servlet-mapping>
</web-app>